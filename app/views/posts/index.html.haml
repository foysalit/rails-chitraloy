.row
	- if @posts
		- @posts.each do |post|
			.columns.small-12.large-4.post-wrapper
				.post
					.row
						.columns.small-12
							.post-image
								= image_tag post.image.url(:small)
					
					.row
						.post-stats.clearfix
							.columns.small-12
								.columns.small-4 
									%i.fa.fa-comments
									#{post.comments.count}
								.columns.small-4 
									%i.fa.fa-thumbs-up
									#{post.get_upvotes.size}
								.columns.small-4 
									%i.fa.fa-thumbs-down
									#{post.get_downvotes.size}

					.row
						.columns.large-12
							%h3.post-title
								= link_to post.title, post